<Window x:Class="Lab9_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab9_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Content="Text"  Margin="10,0,0,0" Width="40"/>
            <Button Content="Bash" Margin="10,0,0,0" Width="40"/>
            <Button Content="C++"  Margin="10,0,0,0" Width="40"/>
            <Button Content="C#" Margin="10,0,0,0" Width="40"/>
            <Button Content="Java"  Margin="10,0,0,0" Width="40"/>
            <Button Content="CSS" Margin="10,0,0,0" Width="40"/>
            <Button Content="HTML" Margin="10,0,0,0" Width="40"/>
            <Button Content="Java Script" Margin="10,0,0,0" Width="70"/>
            <Button Content="PHP" Margin="10,0,0,0" Width="40"/>
            <Button Content="Python" Margin="10,0,0,0" Width="40"/>
            <Button Content="SQL" Margin="10,0,0,0" Width="40"/>
        </WrapPanel>
        <DataGrid Margin="0,186,0,0" x:Name="gridSnippet" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Snippet Name" Width="3*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Snippet Type" Width="*" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Update Time" Width="*" Binding="{Binding UpdateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
